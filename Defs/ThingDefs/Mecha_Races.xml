<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>
	<ThingDef Name="Mecha_BasePawn" Abstract="True">
	  <eType>Pawn</eType>
  	<thingClass>Mecha_Pawn</thingClass>
		<category>Pawn</category>
		<selectable>true</selectable>
		<tickerType>Normal</tickerType>
		<altitudeLayer>Pawn</altitudeLayer>
		<useStandardHealth>false</useStandardHealth>
		<flammability>1.0</flammability>
		<hasTooltip>true</hasTooltip>
		<soundBulletHit>BulletImpactMetal</soundBulletHit>
		<inspectorTabs>
			<li>ITab_Pawn_Thoughts</li>
			<li>ITab_Pawn_Needs</li>
			<li>ITab_Pawn_Prisoner</li>
			<li>ITab_Pawn_Character</li>
		</inspectorTabs>
		<drawGUIOverlay>true</drawGUIOverlay>
  </ThingDef>

  <!-- A corpse that removes itself instantly, bit hacky-->
  <ThingDef>
    <defName>Mecha_Corpse</defName>
    <eType>Corpse</eType>
    <thingClass>Mecha_Corpse</thingClass>
    <comps>
      <li>
        <compClass>CompForbiddable</compClass>
      </li>
    </comps>
  </ThingDef>

	<ThingDef ParentName="Mecha_BasePawn">
		<defName>Mecha_Centipede</defName>
		<label>Centipede</label>
		<maxHealth>800</maxHealth>
		<overdraw>true</overdraw>
    <soundBulletHit>BulletImpactMetal</soundBulletHit>
    <flammability>0</flammability>
    <sunShadowInfo>
			<baseWidth>0.6</baseWidth>
			<baseHeight>0.6</baseHeight>
			<tallness>0.8</tallness>
		</sunShadowInfo>
    <targetHitChanceFactor>2.0</targetHitChanceFactor>
    <race>
      <thinkTree>Humanoid</thinkTree>
      <humanoid>true</humanoid>
      <mechanoid>true</mechanoid>
      <walkSpeed>0.25</walkSpeed>
      <meleeDamage>50</meleeDamage>
      <nameCategory>HumanStandard</nameCategory>
      <hasStory>true</hasStory>
      <bodySize>2.0</bodySize>
      <soundWounded>Pawn_Mech_Centipede_Wounded</soundWounded>
      <soundDeath>Pawn_Mech_Centipede_Death</soundDeath>
      <soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
      <corpseDef>Mecha_Corpse</corpseDef>
    </race>
    <comps>
      <li>
        <compClass>CompExplosive</compClass>
        <explosiveRadius>1.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
      </li>
    </comps>
    <killedLeavings>
      <li>
        <thingDef>MechaPart</thingDef>
        <count>5</count>
      </li>
    </killedLeavings>
	</ThingDef>
</ThingDefs>